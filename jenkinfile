pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'pip install -r shared/requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'python shared/test_cases.py'
            }
        }
    }
}
